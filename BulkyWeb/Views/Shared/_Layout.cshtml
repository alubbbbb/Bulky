    <!DOCTYPE html>
    <html lang="en">
    <head>
        <!-- Meta-Angaben und Title -->
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - BulkyWeb</title>

        <!-- Einbindung der CSS-Dateien (Bootstrap, eigene Styles, Icons) -->
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css">
        <link rel="stylesheet" href="~/BulkyWeb.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="//cdn.datatables.net/2.3.4/css/dataTables.dataTables.min.css" />
        <link rel="stylesheet" href="https://cdn.datatables.net/2.0.7/css/dataTables.dataTables.min.css">



    </head>
    <body>
        <header>
            <!-- Navigationsleiste mit Bootstrap -->
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm bg-primary border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <!-- Logo / Brand -->
                    <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">BulkyWeb</a>
                    <!-- Hamburger-Menü für mobile Ansicht -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <!-- Menüeinträge -->
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                       
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="Customer" asp-controller="Home" asp-action="Privacy">Privacy</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Content Management
                                </a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Category" asp-action="Index">Category</a>
                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Product" asp-action="Index">Product</a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <!-- Hauptinhalt der Seite -->
        <div class="container">
            <main role="main" class="pb-3">
                <partial name="_Notification" />
                @RenderBody() <!-- Platzhalter für den individuellen Seiteninhalt -->
            </main>
        </div>

        <!-- Footer-Bereich -->
        <footer class="border-top bg-primary footer text-muted">
            <div class="container text-white text-center">
                Made with <i class="bi bi-heart-fill"></i> by Vale
            </div>
        </footer>

        <!-- Einbindung der JS-Dateien -->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="//cdn.datatables.net/2.3.4/js/dataTables.min.js" asp-append-version="true"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="https://cdn.tiny.cloud/1/zja7gv4c1ju0ie2dmzseu7yiu5wi5niaympgrgaec2vwnigt/tinymce/8/tinymce.min.js" referrerpolicy="origin" crossorigin="anonymous"></script>
        @await RenderSectionAsync("Scripts", required: false) <!-- Optionaler Bereich für zusätzliche Skripte -->
    </body>
    </html>