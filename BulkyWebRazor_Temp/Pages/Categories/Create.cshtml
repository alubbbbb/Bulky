@page
@model BulkyWebRazor_Temp.Pages.Categories.CreateModel


<!-- View: Formular zum Anlegen einer neuen Kategorie -->
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <!-- Formularüberschrift -->
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>

        <!-- Zusammenfassung aller Validierungsfehler (Seiten-/Formularweit) -->
        @*<div asp-validation-summary="ModelOnly"></div>*@

        <!-- Feld: Kategoriename -->
        <div class="mb-3 row p-1">
            <!-- Beschriftung für Name -->
            <label asp-for="Category.Name" class="p-0"></label>
            <!-- Eingabe für Name -->
            <input asp-for="Category.Name" class="form-control" />
            <!-- Validierungsnachricht für Name -->
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>

        <!-- Feld: Anzeige-Reihenfolge -->
        <div class="mb-3 row p-1">
            <!-- Beschriftung für DisplayOrder -->
            <label asp-for="Category.DisplayOrder" class="pt-0"></label>
            <!-- Eingabe für DisplayOrder -->
            <input asp-for="Category.DisplayOrder" class="form-control" />
            <!-- Validierungsnachricht für DisplayOrder -->
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                <!-- Formular absenden (Kategorie erstellen) -->
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6 col-md-3">
                <!-- Zurück zur Kategorien-Übersicht -->
                <a asp-page="/categories/index" class="btn btn-outline-secondary border form-control">
                    Back to List
                </a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
       <partial name="_ValidationScriptsPartial" />
    }
}



