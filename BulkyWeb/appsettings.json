{
  // Logging-Konfiguration: Hier kannst du festlegen, wie detailliert die Logs sind.
  "Logging": {
    "LogLevel": {
      // Standard-Loglevel für die gesamte Anwendung
      "Default": "Information",
      // Loglevel speziell für Microsoft.AspNetCore-Komponenten
      "Microsoft.AspNetCore": "Warning"
    }
  },
  // Gibt an, welche Hosts auf die Anwendung zugreifen dürfen.
  // Das Sternchen (*) erlaubt alle Hosts.
  "AllowedHosts": "*",

  // Verbindungszeichenfolgen für Datenbanken.
  "ConnectionStrings": {
    // "DefaultConnection" wird im Programmcode verwendet, um die Datenbank zu verbinden.
    // Hier: Verbindung zu einer lokalen SQL Server-Datenbank (LocalDB)
    // - Server=(localdb)\MSSQLLocalDB: Nutzt eine lokale SQL Server Instanz
    // - Database=Bulky1: Name der Datenbank
    // - Trusted_Connection=True: Windows-Authentifizierung wird verwendet
    // - MultipleActiveResultSets=true: Erlaubt mehrere aktive Abfrageergebnisse (praktisch für Entity Framework)
    "DefaultConnection": "Server=(localdb)\\MSSQLLocalDB;Database=Bulky;Trusted_Connection=True;MultipleActiveResultSets=true"
  }
}